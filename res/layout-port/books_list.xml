<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:id="@+id/listadapter"
    android:orientation="horizontal"
    android:layout_width="fill_parent"        
    android:layout_height="fill_parent">
          
    <LinearLayout
    	android:id="@+id/listadapter"
    	android:orientation="vertical" 
    	android:layout_width="wrap_content"        
    	android:layout_height="wrap_content">
    	
    	<TextView android:id="@+id/name" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"                
            android:textColor="#FF00FF00" 
            android:textSize="24px"/>
        
    	<LinearLayout android:orientation="horizontal" 
        	android:layout_width="wrap_content" 
        	android:layout_height="wrap_content">           
        
        	<TextView android:id="@+id/author" 
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content"                
            	android:textColor="#FF00FF00" 
            	android:textSize="18px" />
            
        	<TextView android:id="@+id/created" 
            	android:layout_width="wrap_content" 
            	android:layout_height="wrap_content"                
            	android:textColor="#FF00FF00"
            	android:textSize="14px"
            	android:layout_marginLeft="130px" />
        	   
    	</LinearLayout>
          
    	<TextView android:id="@+id/bookinfo"
        	android:layout_width="700px" 
        	android:layout_height="wrap_content"                
        	android:textColor="#FF000000"  />
    
    </LinearLayout>
    
    <Button android:id="@+id/contentbtn"
        android:layout_width="wrap_content"  
        android:layout_height="90px"            
        android:text="@string/see_content" />
    
    <Button android:id="@+id/editbtn"
        android:layout_width="wrap_content"  
        android:layout_height="90px"            
        android:text="@string/book_edit" 
        android:layout_gravity="bottom|right" />
   
</LinearLayout>